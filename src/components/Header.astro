<header class="sticky top-0 z-30 w-full backdrop-blur-sm bg-slate-100 border-b border-slate-200">
  <div class="px-4 sm:px-6 lg:px-8 lg:py-2">
    <div class="flex items-center justify-between py-2">
      <div class="flex items-center">
        {/* Responsive Menu Button */}
        <button
          id="buttonMenu"
          class="lg:hidden inline-flex items-center justify-center p-2 text-slate-500 rounded-md hover:bg-slate-100"
        >
          <svg
            id="iconMenuOpen"
            class="size-6 hidden"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"></path>
          </svg>
          <svg
            id="iconMenuClose"
            class="size-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
          </svg>
        </button>

        {/* Header Logo */}
        <svg
          class="size-6 hidden lg:block text-blue-600"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672Zm-7.518-.267A8.25 8.25 0 1 1 20.25 10.5M8.288 14.212A5.25 5.25 0 1 1 17.25 10.5"
          ></path>
        </svg>

        {/* Header Title */}
        <div class="flex items-center ml-2 lg:-mt-1">
          <span
            class="text-xl font-pixel bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent"
          >
            Waypoints
          </span>
        </div>
      </div>

      {/* Header Right Section */}
      <div class="flex items-center space-x-4">
        <a href="https://github.com/dpup/waypnts.com" class="p-2">
          <svg viewBox="0 0 98 96" class="size-6" xmlns="http://www.w3.org/2000/svg"
            ><path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z"
              fill="#999999"></path></svg
          >
        </a>
      </div>
    </div>
  </div>
</header>
<script>
  import { isNavOpen } from './stores.js';

  document.getElementById('buttonMenu').addEventListener('click', () => {
    isNavOpen.set(!isNavOpen.get());
  });

  isNavOpen.subscribe((open) => {
    document.getElementById('iconMenuOpen').classList.toggle('hidden', !open);
    document.getElementById('iconMenuClose').classList.toggle('hidden', open);
  });
</script>
