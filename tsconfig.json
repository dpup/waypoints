{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "strictNullChecks": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@img/*": ["src/assets/img/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@styles/*": ["src/assets/styles/*"]
    }
  },
  "exclude": ["dist"]
}
